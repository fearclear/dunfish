{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "lib": [
      "ES2019"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "lib/**/*",
    "package.json"
  ]
}